= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :count
    = f.number_field :count
  .field
    = f.label :crit_count
    = f.number_field :crit_count
  .field
    = f.label :item_type
    = f.number_field :item_type
  .actions
    = f.submit 'Save'
